<resources>

    <!-- Base application theme. -->
    <style name="SofaPixTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SofaPixTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SofaPixTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="SofaPixTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SofaPixTheme.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="SofaPixTheme.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SofaPixTheme.Text.Italic">
        <item name="android:textStyle">italic</item>
    </style>

</resources>
